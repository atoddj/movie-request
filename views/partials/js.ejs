<% if (searchQuery) { %>
  <!-- specific to requests -->
  <script type="text/javascript">
    var searchInput = document.querySelectorAll('[name="q"]')[0];
    searchInput.value = "<%= searchQuery.q %>";
    $('.add-request').click(function(e) {
      e.preventDefault();
      var mediatype = $(this).data('mediatype');
      var tmdb_url = 'https://www.themoviedb.org/' + mediatype + '/' + $(this).data('tmdbid');
      $.post( "/request", {movie_name: $(this).data('title'), url: tmdb_url, mediatype: mediatype, year: $(this).data('year'), _id: $(this).data('tmdbid')}).done(function() {location.reload()});
    });
  </script>
<% } %>

<script type="text/javascript">
  $('[data-name="submit"]').on('click', (e) => {
    e.preventDefault();
    $.post($(e.currentTarget).data('action'), getValues($(e.currentTarget).parents()[3].attributes.id.value)).done(() => {console.log('maybe it worked')});
  });

  var getValues = (modalId) => {
    var userObj = {};
    $('#' + modalId + ' input').each((index, element) => {
      userObj[$(element).data('name')] = element.value;
    });
    return userObj;
  }

</script>
