<% if (searchQuery) { %>
  <!-- specific to requests -->
  <script type="text/javascript">
    var searchInput = document.querySelectorAll('[name="q"]')[0];
    searchInput.value = "<%= searchQuery.q %>";
    $('.add-request').click(function(e) {
      e.preventDefault();
      var tmdb_url = 'https://www.themoviedb.org/movie/' + $(this).data('tmdbid');
      $.post( "/request", {movie_name: $(this).data('title'), url: tmdb_url, year: $(this).data('year'), _id: $(this).data('tmdbid')}).done(function() {location.reload()});
    });
  </script>
<% } %>
